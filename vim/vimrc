" ==================================
" ===      Configure Vundle      ===
" ==================================
set nocompatible 
filetype off   
set rtp+=~/.vim/bundle/vundle

call vundle#rc()

" original repos on github
Bundle 'gmarik/vundle'
Bundle 'tpope/vim-fugitive'
Bundle 'Lokaltog/vim-easymotion'
Bundle 'scrooloose/nerdtree'
Bundle 'daviddavis/vim-colorpack'

" vim-scripts repos
Bundle 'AutoClose'
Bundle 'snipMate'
Bundle 'SuperTab'
Bundle 'jsbeautify'
Bundle 'L9'
Bundle 'FuzzyFinder'
Bundle 'EasyMotion'
Bundle 'checksyntax'

filetype plugin indent on     " required!
filetype indent on

syntax on

set autoindent
set smartindent
set backup
set tabstop=4
set shiftwidth=4
set expandtab
set incsearch
set hlsearch
set cursorline
set number

set encoding=utf8

colo zmrok

map <F2> :NERDTreeToggle<CR>
map <F9> :!%<CR>

"Format the code according to the filetype"
vmap f =<CR>

" Start case insensitive search
map <C-f> /\c
imap <C-f> <ESC>/\c

" Replace
map <C-r> :%s/
imap <C-r> <ESC>:%s/

"Adds a new line below the current line and moves the coursor into its beginning in insert mode"
map <S-CR> o
imap <S-CR> <Esc>o

"Adds a new line above the current line and moves the coursor into its beginning in insert mode"
map <C-S-CR> ^i<CR><Esc>ki
imap <C-S-CR> <Esc>^i<CR><Esc>ki

"Delete the current line"
map <C-d> <Esc>dd
imap <C-d> <Esc>ddi

"Adds 2 new lines below the current line. Moves everything after the coursor
"to the second line and places the coursor in the beginning of the first line
"in insert mode"
imap /<CR> <CR><C-CR>

map <C-a> ^
imap <C-a> <ESC>^i
map <C-e> $
imap <C-e> <ESC>$a

vmap a ggVG
vmap <C-c> "+yy
vmap <C-v> "+p
vmap <C-x> "+dd
